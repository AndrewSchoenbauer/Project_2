<div class="text-center">
    <img src="{{games.image}}">
    <h2 class="titlegame">{{games.name}}</h2>
    <p class="homepagecolor">Created by {{games.developer}} on {{games.release_day}}</p>
    <p>
        <button id="main-btn" class="btn btn-color">Add A Review!!</button>
        <button id="save-btn" class="btn btn-color" data-gameid="{{games.id}}" data-playerid={{player_id}}>Save this
            Game</button>
    </p>
    {{!-- Review Form --}}

    <div class="row justify-space-between-md hide" id="review-card">
        <div class="login-card">
            <h2 class="page-title">Add a review</h2>
            <form class="form add-review">
                <div class="form-group">
                    <label for="review-title">Title</label>
                    <input class="form-input" type="text" id="review-title" />
                </div>
                <div class="form-group">
                    <label for="review-text">review:</label>
                    <input class="form-input" type="input" id="review-text" />
                </div>
                <div class="star-conatiner">
                    <button id="starOne" class="fa fa-star" data-num="1"></button>
                    <button id="starTwo" class="fa fa-star" data-num="2"></button>
                    <button id="starThree" class="fa fa-star" data-num="3"></button>
                    <button id="starFour" class="fa fa-star" data-num="4"></button>
                    <button id="starFive" class="fa fa-star" data-num="5"></button>
                </div>
                <div class="form-group">
                    <button id="add-review-btn" class="btn btn-primary" type="submit"
                        data-gameID="{{games.id}}">add</button>
                </div>

            </form>

        </div>
    </div>

    {{#each reviews as |rvData|}}
    {{#each rvData.reviews as |reviewInfo| }}
    <div class="review-card">
        <h2>Title</h2>
        <p class="rev-card-title">{{reviewInfo.Title}}</p>
        <div>
            <h2>Review</h2>
        </div>
        <div class="review-card-col">
            <p>{{reviewInfo.description}}</p>
        </div>
        <div class="rating-card">
            <h2>Rating</h2>
            <div class="review-card-col">
                
                <p>{{reviewInfo.rating}}/5</p>
            </div>
        </div>
        <h2>Player ID</h2>
        <div class="review-card-column">
            
            <p>{{reviewInfo.player_id}}</p>
        </div>
    </div>
    {{/each}}
    {{/each}}
</div>

{{#if logged_in}}
<script src="/js/rating.js"></script>
<script src="/js/addReview.js"></script>
<script src="/js/savegame.js"></script>

{{/if}}